<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgPreloginMain"
        android:layout_width="340dp"
        android:layout_height="340dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276"
        app:srcCompat="@drawable/image_prelogin" />

    <TextView
        android:id="@+id/textViewPreloginHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Prelogin_header"
        android:textSize="@dimen/txt_main_title_size"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toTopOf="@+id/btnPreloginMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPreloginMain"
        app:layout_constraintVertical_bias="0.272" />

    <TextView
        android:id="@+id/textViewPreloginDescription"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/Prelogin_description"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/txt_paragraph_size"
        app:layout_constraintBottom_toTopOf="@+id/btnPreloginMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPreloginHeader" />

    <Button
        android:id="@+id/btnPreloginMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Prelogin_getStarted"
        android:textSize="@dimen/txt_button_size"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@color/purple"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPreloginMain"
        app:layout_constraintVertical_bias="0.734" />
</androidx.constraintlayout.widget.ConstraintLayout>