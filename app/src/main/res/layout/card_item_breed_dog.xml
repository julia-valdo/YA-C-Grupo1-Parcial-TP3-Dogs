<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewItemBreedDog"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/cardViewBreedFilterHeight"
    android:layout_marginRight="@dimen/cardViewBreedFilterMarginRight"
    app:cardCornerRadius="@dimen/cardViewBreedFilterCornerRadius">
    <LinearLayout
        android:id="@+id/linearCardViewItemBreedDog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtCardItemBreedDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:layout_marginRight="@dimen/cardViewBreedFilterMarginRight"
            android:layout_gravity="center"
            android:text="ejemplo"
            android:textColor="@color/darkest_grey"
            android:textSize="@dimen/cardViewtxtBreed"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>