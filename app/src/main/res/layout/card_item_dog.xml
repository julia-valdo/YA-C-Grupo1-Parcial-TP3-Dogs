<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewItemDog"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardViewHeight"
    android:layout_margin="@dimen/cardViewMargin"
    app:cardCornerRadius="@dimen/cardViewCornerRadius">

    <ProgressBar
        android:id="@+id/progressBarCardItemDog"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgCardItemDog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_dog" />

    <LinearLayout
        android:id="@+id/linearCardViewItemDog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_margin="@dimen/cardViewItemsMargin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCardItemDogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/cardViewtxtName"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowRadius="@dimen/cardViewShadowRadius"
                android:text="@string/cardItemDogName"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCardItemDogPawFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_two_dog_pawprints"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/txtCardItemDogRace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/cardViewtxt"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="@dimen/cardViewShadowRadius"
                    android:text="@string/cardItemDogRace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCardItemDogPawSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_two_dog_pawprints"
                    app:tint="@color/white"/>

                <TextView
                    android:id="@+id/txtCardItemDogSubRace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/cardViewtxt"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="@dimen/cardViewShadowRadius"
                    android:text="@string/cardItemDogSubRace" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardViewItemsMargin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnCardItemDogFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/icon_follow_filled" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCardItemDogAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/cardViewtxt"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="@dimen/cardViewShadowRadius"
                    android:text="@string/cardItemDogRace" />

                <TextView
                    android:id="@+id/txtCardItemDogSlash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="@dimen/cardViewtxt"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="@dimen/cardViewShadowRadius"
                    android:text="@string/cardItemDogSlash" />

                <TextView
                    android:id="@+id/txtCardItemDogSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/cardViewtxt"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowRadius="@dimen/cardViewShadowRadius"
                    android:text="@string/cardItemDogSex" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>